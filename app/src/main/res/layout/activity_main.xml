<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1">

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

            <!-- Row 1 with single column -->
            <TableRow
                android:layout_height="fill_parent"
                android:layout_width="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:text="Chiang mai"
                    android:id="@+id/name"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_centerHorizontal="true" />

            </TableRow>

            <!-- Row 2 with single column -->
            <TableRow
                android:layout_height="fill_parent"
                android:layout_width="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="Mostly Cloudy"
                    android:id="@+id/main"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </TableRow>

            <!-- Row 3 with single column -->
            <TableRow
                android:layout_height="fill_parent"
                android:layout_width="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="center"
                    android:textSize="70sp"
                    android:text="27Â°"
                    android:id="@+id/temp"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_centerHorizontal="true" />

            </TableRow>

            <!-- Row 4 with 2 columns -->
            <TableRow
                android:layout_height="fill_parent"
                android:layout_width="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="right"
                    android:textSize="28sp"
                    android:text="Sunrise :"
                    android:id="@+id/sunriseTxt"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="left"
                    android:textSize="28sp"
                    android:text=" 6:20 AM"
                    android:id="@+id/sunrise"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_centerHorizontal="true" />

            </TableRow>

            <!-- Row 5 with 2 columns -->
            <TableRow
                android:layout_height="fill_parent"
                android:layout_width="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="right"
                    android:textSize="28sp"
                    android:text="Sunset :"
                    android:id="@+id/sunsetTxt"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="left"
                    android:textSize="28sp"
                    android:text=" 5:58 PM"
                    android:id="@+id/sunset"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_centerHorizontal="true" />

            </TableRow>

            <!-- Row 6 with 2 columns -->
            <TableRow
                android:layout_height="fill_parent"
                android:layout_width="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="right"
                    android:textSize="28sp"
                    android:text="Humidity :"
                    android:id="@+id/humidityTxt"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="left"
                    android:textSize="28sp"
                    android:text=" 83 %"
                    android:id="@+id/humidity"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_centerHorizontal="true" />

            </TableRow>

            <!-- Row 7 with 2 columns -->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="right"
                    android:textSize="28sp"
                    android:text="Wind speed :"
                    android:id="@+id/windTxt"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="left"
                    android:textSize="28sp"
                    android:text=" 1 mps"
                    android:id="@+id/wind"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_centerHorizontal="true" />

            </TableRow>

            <!-- Row 8 with 2 columns -->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="right"
                    android:textSize="28sp"
                    android:text="Cloudiness :"
                    android:id="@+id/cloudinessTxt"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="left"
                    android:textSize="28sp"
                    android:text=" 75 %"
                    android:id="@+id/cloudiness"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_centerHorizontal="true" />

            </TableRow>

            </TableLayout>

    </ScrollView>

</RelativeLayout>
